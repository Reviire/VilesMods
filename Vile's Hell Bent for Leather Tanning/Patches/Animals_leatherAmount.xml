<?xml version="1.0" encoding="UTF-8"?>
<Patch>

	<Operation Class="PatchOperationFindMod">
	<mods>
		<li>Core SK</li>
	</mods>
	<match Class="PatchOperationSequence">
	<success>Always</success>
		<operations>
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Feenix" or defName="GreenWyvern"]/statBases/LeatherAmount</xpath>
				<value>
					<LeatherAmount>13</LeatherAmount>
				</value>
			</li>
		
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Kirin" or
					defName="Behir"]/statBases/LeatherAmount</xpath>
				<value>
					<LeatherAmount>11</LeatherAmount>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[@Name="SK_AnimalThingBase"]/statBases/LeatherAmount</xpath>
				<value>
					<LeatherAmount>4</LeatherAmount>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="Cow"or
					defName="Yak"]/statBases</xpath>
				<value>
					<LeatherAmount>6</LeatherAmount>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="Goat"]/statBases</xpath>
				<value>
					<LeatherAmount>5</LeatherAmount>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[@Name="InstectoidBase" or
					defName="Mutant_Ogre" or
                    defName="Animal_Desiri"]/statBases/LeatherAmount</xpath>
				<value>
					<LeatherAmount>4</LeatherAmount>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="FRaptor"]/statBases/LeatherAmount</xpath>
				<value>
					<LeatherAmount>6</LeatherAmount>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Fishercat" or
					defName="Human"]/statBases/LeatherAmount</xpath>
				<value>
					<LeatherAmount>3</LeatherAmount>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/AlienRace.ThingDef_AlienRace[defName="Alien_Nova" or
					defName="Alien_Dova" or
					defName="Norbal" or
					defName="Alien_Orassan"]/statBases/LeatherAmount</xpath>
				<value>
					<LeatherAmount>2</LeatherAmount>
				</value>
			</li>
			
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[@Name="SK_BigBirdThingBase" or 
					defName="Ermine" or
					defName="Meerkat" or
					defName="YorkshireTerrier" or
					defName="Goose"]/statBases/LeatherAmount</xpath>
				<value>
					<LeatherAmount>2</LeatherAmount>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Turkey"]/statBases/LeatherAmount</xpath>
				<value>
					<LeatherAmount>1</LeatherAmount>
				</value>
			</li>
		</operations>
		</match>
    </Operation>	

	<Operation Class="PatchOperationFindMod">
	<mods>
		<li>Vile's Amuse Bouche</li>
	</mods>
	<match Class="PatchOperationSequence">
		<operations>

			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="ThingDefFishTailteeth" or defName="ThingDefDeathSturgeon"]/statBases/LeatherAmount</xpath>
				<value>
					<LeatherAmount>1</LeatherAmount>
				</value>
			</li>

		</operations>
		</match>
    </Operation>	
</Patch>	

