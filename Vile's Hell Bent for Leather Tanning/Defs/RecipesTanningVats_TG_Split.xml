<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<RecipeDef Class="UniversalFermenterSK.RecipeDef_UF">
		<defName>TanVat_TopGrain_Heavy</defName>
		<label>split and tan heavy hides (x8/x15)</label>
		<description>Splits a hide into good-quality top-grain and low-quality suede. The Top-grain leather has the surface corrected to remove imperfections which allows for less wasted product. It may later be dyed and embossed to make a higher-quality product.</description>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Hide_HeavyHide</li>
						<li>Hide_HeavyHideCured</li>
						<li>Hide_HeavyFurPelt</li>
						<li>Hide_HeavyFurPeltCured</li>
						<li>Hide_WaterproofSkin</li>
						<li>Hide_WaterproofSkinCured</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>TreeBark</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Hide_HeavyHide</li>
				<li>Hide_HeavyHideCured</li>
				<li>Hide_HeavyFurPelt</li>
				<li>Hide_HeavyFurPeltCured</li>
				<li>Hide_WaterproofSkin</li>
				<li>Hide_WaterproofSkinCured</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Leather_CorrectedGrain>8</Leather_CorrectedGrain>
			<Leather_Chinchilla>15</Leather_Chinchilla>
		</products>
		<recipeUsers>
			<li>TanningVat</li>
		</recipeUsers>
		<temperatureSafe>
			<min>0</min>
			<max>55</max>
		</temperatureSafe>
		<temperatureIdeal>
			<min>10</min>
			<max>30</max>
		</temperatureIdeal>
		<ruinedPerDegreePerHour>0</ruinedPerDegreePerHour>
		<processDays>4</processDays>
	</RecipeDef>
	
