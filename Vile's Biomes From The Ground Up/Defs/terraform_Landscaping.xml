	<ThingDef ParentName="RFF_TerraformBasicBase">	 
	<defName>Terraform_MakeGravel</defName>
	<label>Add Gravel</label>
	<description>Undeveloped Soil</description>
	<uiIconPath>UI/Icons/Terraforming/UndevelopedSoil</uiIconPath>
	<modExtensions>
		<li Class="FertileFields.Terrain">
			<above>
				<li>RockySoil</li>
			</above>
			<result>Gravel</result>
		</li>
	</modExtensions>
	<costList>
		<CrushedStone>20</CrushedStone>
		<SandResource>4</SandResource>
	</costList>
	<statBases>
		<WorkToBuild>960</WorkToBuild>
	</statBases>
	<terrainAffordanceNeeded>Diggable</terrainAffordanceNeeded>
</ThingDef>	
	
	 
	
	<ThingDef ParentName="RFF_TerraformBasicBase">
		<defName>Terraform_RemoveSod</defName>
		<label>Remove Sod</label>
		<description>Dig up sod to reveal plantable, fertile soil.</description>
		<uiIconPath>UI/Icons/Terraforming/FertileSoil</uiIconPath>
		<modExtensions>
			<li Class="FertileFields.Terrain">
				<above>
					<li>SodLawn</li>
					<li>SodPattern</li>
					<li>SodClover</li>
				</above>
				<result>Soil</result>
			</li>
		</modExtensions>
		<statBases>
			<WorkToBuild>700</WorkToBuild>
		</statBases>
	</ThingDef>
	
	
	
	
	
</Defs>