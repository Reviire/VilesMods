<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="SK_BuildingBase">
		<defName>wall_angle</defName>
		<label>Diagonal Wall (N)</label>
		<graphicData>
			<texPath>Things/Building/DiagonalWall</texPath>
            <graphicClass>Graphic_Appearances</graphicClass>			
            <shaderType>CutoutComplex</shaderType>
			<drawSize>(3,3)</drawSize>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
				<edgeTop>Damage/Edge</edgeTop>
				<edgeBot>Damage/Edge</edgeBot>
				<edgeLeft>Damage/Edge</edgeLeft>
				<edgeRight>Damage/Edge</edgeRight>
			</damageData>
            <drawRotated>false</drawRotated>
			<allowFlip>true</allowFlip>
		</graphicData>
		<altitudeLayer>BuildingOnTop</altitudeLayer>
        <uiIconPath>Things/Building/DiagonalWall_ui</uiIconPath>
		<fillPercent>0</fillPercent>
		<statBases>
			<MaxHitPoints>380</MaxHitPoints>
			<WorkToBuild>270</WorkToBuild>
			<Flammability>1.0</Flammability>
		</statBases>
		<designationCategory>Structure</designationCategory>
		<description>A visual overlay to give a wall a diagonal appearance. Must be placed over a normal wall. The occupying tile is to the North.</description>
		<size>(1,1)</size>
		<stuffCategories>
			<li>Stony</li>
			<li>Bricks</li>
			<li>Metallic</li>
		</stuffCategories>
		<costStuffCount>3</costStuffCount>
		<rotatable>true</rotatable>
		<coversFloor>false</coversFloor>
		<tickerType>Never</tickerType>
		<blockLight>true</blockLight>
		<blockWind>true</blockWind>
		<canOverlapZones>true</canOverlapZones>
        <clearBuildingArea>false</clearBuildingArea>
	</ThingDef>
    
