<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- INDUSTRIAL -->
	<!-- At petrochem lab -->
    <RecipeDef>
		<defName>MakePolystyrene</defName>
		<label>Make Polystyrene x10</label>
		<description>Polystyrene is a polymer made via ethylene and benzene products. It has some practical commercial applications, but out here it's more important as an ingredient in napalm. It's also used to make ABS plastic and it is the main component in synthetic rubber.</description>
		<jobString>Making isopropyl alcohol.</jobString>
		<workAmount>800</workAmount>
		<workSpeedStat>SmithingSpeed</workSpeedStat>
		<effectWorking>Smith</effectWorking>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Sulphates</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
            			<li>
				<filter>
					<thingDefs>
						<li>Polymers</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
		</ingredients>
		<products>
			<Polystyrene>10</Polystyrene>
		</products>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Polymers</li>
				<li>Sulphates</li>
			</thingDefs>
		</fixedIngredientFilter>
		<skillRequirements>
			<Crafting>7</Crafting>
		</skillRequirements>
		<workSkill>Crafting</workSkill>
		<workSkillLearnFactor>0.8</workSkillLearnFactor>
		<researchPrerequisite>Oil_Industry_C3</researchPrerequisite>
	</RecipeDef>
    
    
