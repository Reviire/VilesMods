	</RecipeDef>
    
    <RecipeDef>
		<defName>MakeAmmonia</defName>
		<label>Make Ammonia x10</label>
		<description>Ammonia is synthesized via nitrogen and hydrogen using hydrocarbons as a feedstock. It's useful for explosives, as a working fluid for binary cycle plants, and for certain plastics.</description>
		<jobString>Making ammonia.</jobString>
		<workAmount>1000</workAmount>
		<workSpeedStat>SmithingSpeed</workSpeedStat>
		<effectWorking>Smith</effectWorking>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
                        <li>Coke</li>
					</thingDefs>
				</filter>
				<count>20</count>
			</li>
		</ingredients>
		<products>
			<SyntheticAmmonia>10</SyntheticAmmonia>
		</products>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Coke</li>
			</thingDefs>
		</fixedIngredientFilter>
		<skillRequirements>
			<Crafting>6</Crafting>
		</skillRequirements>
		<workSkill>Crafting</workSkill>
		<workSkillLearnFactor>0.8</workSkillLearnFactor>
		<researchPrerequisite>Oil_Industry_C3</researchPrerequisite>
	</RecipeDef>
	
	<RecipeDef>
		<defName>VulcanizeRubber</defName>
		<label>Make natural rubber x10</label>
		<description>Vulcanize rubber from natural latex and sulfur. Produces 10.</description>
		<jobString>Vulcanizing rubber from natural latex and sulfur.</jobString>
		<workAmount>800</workAmount>
		<workSpeedStat>SmithingSpeed</workSpeedStat>
		<effectWorking>Smith</effectWorking>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>RawCaoutchouc</li>
					</thingDefs>
				</filter>
				<count>30</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Sulfur</li>
					</thingDefs>
				</filter>
				<count>3</count>
			</li>
		</ingredients>
		<products>
			<Rubber>10</Rubber>
		</products>
		<fixedIngredientFilter>
			<thingDefs>
				<li>RawCaoutchouc</li>
				<li>Sulfur</li>
			</thingDefs>
		</fixedIngredientFilter>
		<skillRequirements>
			<Crafting>7</Crafting>
		</skillRequirements>
		<workSkill>Crafting</workSkill>
		<workSkillLearnFactor>0.8</workSkillLearnFactor>
		<researchPrerequisite>BiofuelRefining</researchPrerequisite>
	</RecipeDef>
	
	<RecipeDef>
		<defName>MakeRubber</defName>
		<label>Make synthetic rubber x10</label>
		<description>Create rubber from polymers and sulphates. Produces 10.</description>
		<jobString>Creating rubber from polymers and sulphates.</jobString>
		<workAmount>800</workAmount>
		<workSpeedStat>SmithingSpeed</workSpeedStat>
		<effectWorking>Smith</effectWorking>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Butadiene</li>
					</thingDefs>
				</filter>
				<count>20</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Polystyrene</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
		</ingredients>
		<products>
			<Rubber>10</Rubber>
		</products>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Butadiene</li>
				<li>Polystyrene</li>
			</thingDefs>
		</fixedIngredientFilter>
		<skillRequirements>
			<Crafting>10</Crafting>
		</skillRequirements>
		<workSkill>Crafting</workSkill>
		<workSkillLearnFactor>0.8</workSkillLearnFactor>
		<researchPrerequisite>Oil_Industry_C3</researchPrerequisite>
	</RecipeDef>

	<RecipeDef>
		<defName>MakeEpoxy</defName>
